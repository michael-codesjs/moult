{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "module": "CommonJS",
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "disableSourceOfProjectReferenceRedirect": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__/**/*.test.ts", "node_modules"]
} 